<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portal Web de Histórico de Saúde</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top" style="background-color: #AB2424; ">
            <a class="navbar-brand" href="#" style="color:white;">PWHS</a>
            <span style="color: white;font-size: 14px;margin-left: auto;margin-bottom: -15px;">@ViewData["MsgLayout"]</span>
            <div class="dropleft" style="margin-top:10px;">
                <a role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="margin-left:10px;">
                    <img src="~/user_icon-icons.com_66546.png" alt="usuário" style="width:25px;" />
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" style="margin-left: auto;">
                    <a class="dropdown-item" href=# onclick="btnAlterarSenha()"> <i class="fa fa-cogs"></i>&nbsp;&nbsp;Alterar Senha</a>
                    <a class="dropdown-item" href=# onclick="btnSair()"><i class="fa fa-cogs"></i>&nbsp;&nbsp;Sair</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="row" style="width:100%;">

        @RenderBody()

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
<script>

    function btnSair() {
        window.location.href = '@Url.Action("Sair", "TelaInicialEntidade")';

    };
    function btnAlterarSenha() {
        window.location.href = '@Url.Action("AlterarSenha", "TelaInicialEntidade")';

    };
</script>
